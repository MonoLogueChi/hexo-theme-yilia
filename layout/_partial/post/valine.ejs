<div id="vcomment"></div>
<script>
  var valineConifg = <%- JSON.stringify(theme.valine)%>;
  valineConifg.el = '#vcomment';
  var valineVersion = '<_ theme.valine.version %>' ? '<%= theme.valine.version %>' : 'latest';
  loadScript('https://cdn.jsdelivr.net/npm/valine@' + valineVersion + '/dist/Valine.min.js',
    function(){
      new Valine(valineConifg);
      if(window.location.hash){
        var checkExist = setInterval(function() {
          if (document.getElementById(window.location.hash.replace("#",""))) {
            location.href = window.location.hash;
            clearInterval(checkExist);
          }
        }, 250);
      }
  });
</script>